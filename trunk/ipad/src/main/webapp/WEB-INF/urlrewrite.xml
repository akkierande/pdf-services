<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN" "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">
<urlrewrite>
    <rule>
        <note>Rewrite GET /pdfid/{pdf id} as a request to /pdfById.do?pdfId={pdf id}</note>
        <condition type="method">GET</condition>
        <from>^/pdf/(\d+)/?$</from>
        <to>/pdfById.do?pdfId=$1</to>
    </rule>

    <rule>
        <note>Rewrite POST  as a request to /pdfCreate.do</note>
        <condition type="method">POST</condition>
        <from>^/pdf/create*$</from>
        <to>/pdfCreate.do</to>
    </rule>
    
    <rule>
        <note>Rewrite PUT  as a request to /pdfUpdate.do</note>
        <condition type="method">PUT</condition>
        <from>^/(\d+)/?$</from>
        <to>/pdfUpdate.do?pdfId=$1</to>
    </rule>

    <rule>
        <note>Rewrite DELETE  /{pdf id} as a request to /pdfDelete.do?pdfId=$1</note>
        <condition type="method">DELETE</condition>
        <from>^/(\d+)$</from>
        <to>/pdfDelete.do?pdfId=$1</to>
    </rule>
    
</urlrewrite>
